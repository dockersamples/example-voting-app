vote:
  image: gochiba/vote:latest
  command: python app.py
  ports:
  - 80
  links:
    - redis:redis

redis:
  image: redis:alpine
  tty: true
  stdin_open: true

worker:
  image: gochiba/worker:latest
  links:
    - db:db
    - redis:redis

db:
  image: postgres:9.4

result:
  image: gochiba/result:latest
  command: nodemon --debug server.js
  ports:
    - 80
    - 5858:5858
  links:
    - db:db
